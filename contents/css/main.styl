@import 'nib'
@import 'normalize.css'

medium = 12px
gray = #999

body, input, textarea, label, legend
  font-family Helvetica Neue, Helvetica, Arial, sans-serif !important
  font-size medium !important

body
  text-align center
  margin 0 10px
  color #666

h1, h2, h3
  font-weight 300
  font-family Oswald

a
  text-decoration none
  color black
  &:hover
    text-decoration underline

p
  margin 1em 0
p, li
  line-height 150%

fieldset
  border none
  padding 0

body, .wufoo
  input, textarea
    min-width 0
    max-width none
    width 350px
    border solid 1px hsla(0, 0%, 0%, 0.2) !important
    border-radius 3px !important
    background none !important
    box-shadow 0 1px 3px hsla(0, 0%, 0%, 0.15) inset
    padding 3px
    outline none
  input[type=submit]
    width auto
    padding 3px 20px
    background hsl(220, 0%, 80%) linear-gradient(top, hsla(0, 0%, 100%, 0.8), hsla(0, 0%, 100%, 0.2) 50%, hsla(0, 0%, 100%, 0) 50%, transparent) !important
    text-shadow 0 1px 0 hsla(0, 0%, 100%, 0.6)
    box-shadow 0 0 3px hsla(0, 0%, 0%, 0.1)
    transition background-color linear 200ms
    &:hover, &:active
      background-color hsl(220, 20%, 80%) !important
    &:active
      box-shadow 0 2px 5px hsla(0, 0%, 0%, 0.1) inset

#page
  max-width 800px
  margin 0 auto
  text-align left

  > header
    h1
      font-family Oswald, Helvetica Neue, Helvetica, Arial, san-serif
      display inline-block
    nav
      text-transform uppercase
      &, ul, li
        display inline-block
      li
        margin 0 1em

article
  margin 0 0 2em
  h5
    color gray

aside
  float right
  line-height 150%
  margin-left 20px
  h4
    margin 1px 0 0
  ul
    padding 0
    margin 0
    list-style-type none
  img
    box-shadow 0 0 1px hsla(0, 0%, 0%, 0.3)
    padding 3px
    border-radius 2px

.wufoo
  #header
    display none
  li
    padding-left 0 !important
    width 45%
